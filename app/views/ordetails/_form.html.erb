
<div class="row">
<table class='col-md-8 col-lg-8 col-sm-4 col-xs-12 table table-hover table-striped table-bordered'>
  <thead>
    <tr>
      <th>Person</th>
      <th>Item</th>
      <th>Amount</th>
      <th>Price</th>
      <th>Comment</th>
      
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <%  @ordered_list.each do |order| %>
       <% if order.item %>
          <tr>
            <td><%=  order.user_name %></td>
            <td><%=  order.item %></td>
            <td><%=  order.amount %></td>
            <td><%=  order.price %> LE</td>
            <td><%=  order.comment %></td>
            <td><%=  link_to 'Cancel',order, method: :delete,:class => 'btn btn-danger' %></td>
          </tr>
          <% end %>
    <% end %>
  </tbody>
</table>
<br>

<div class="flickr_pagination">
    <div class="page_info">
      <%= page_entries_info @ordered_list %>
    </div>
    <%= will_paginate @ordered_list, :container => false %>
  </div>

</div>


<h1>Add New Order</h1>

<div class="row">
<%= form_for(@ordetail ,:html => {:class => "form-inline"} ) do |f| %>
  <% if @ordetail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ordetail.errors.count, "error") %> prohibited this ordetail from being saved:</h2>

      <ul>
      <% @ordetail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :item %><br>
    <%= f.text_field :item ,autofocus: true ,:class=>'form-control'%>
  </div>
  <div class="field form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price , autofocus: true ,:class=>'form-control', :step => 'any' %>
  </div>
  <div class="field form-group">
    <%= f.label :amount %><br>
    <%= f.number_field :amount ,autofocus: true ,:class=>'form-control'%>
  </div>
  <div class="field form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :comment,autofocus: true ,:class=>'form-control' %>
  </div>
  <div class="field form-group hide">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id ,autofocus: true ,:class=>'form-control'%>
  </div>
  <div class="field form-group hide">
    <%= f.label :order_id %><br>
    <%= f.number_field :order_id, :value => params[:order_id] , autofocus: true ,:class=>'form-control' %>
  </div>
  <div class="actions form-group">
    <%= f.submit "Add" ,:class => 'btn btn-primary' %>
  </div>
<% end %>
