
<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      
      <% @order.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
      
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label :for %><br>
     <%= f.select :for, ['breakfast','dinner'], :selected => 'breakfast' ,:class => 'form-control' %>
  </div>
 
  <div class="field">
    <%= f.label :restaurant_name %><br>
    <%= f.text_field :res_name , :class => 'form-control'%>
  </div>

   <div class="field">
    <%= f.label :menu_image %>
    <%= f.file_field :avatar, :class => 'form-control' , :accept => 'image/*' %>
    </div>
 
   <div class="field">
         
    <%= f.label :Invite_groups %><br>
         
        <select name='ingroups[]' multiple="true"  class='form-contol' > 
            <%  @groups.each  do |g| %>
                  
               <option value="<%=g['id']%>"> <%= g["name"] %></option>
        
             <% end %>
          
         </select>
       
   </div>
     
      <div class="field">
         <% @t=@t.as_json %>

    <%= f.label :Invite_friends %><br>
                <select name='infriends[]' multiple="true"  class='form-contol'  > 

            <%  @t.each  do |friend| %>
                  
                  <option value='<%=friend[0]["id"]%>'> <%= friend[0]['name'] %></option>
        
             <% end %>
        </select>
       
   </div>
   

   <%= f.hidden_field :user_id,{value:current_user.id} %>
  <div class="actions">
    <%= f.submit  :class => 'form-control' , :style=> 'width:130px' %>
  </div>
<% end %>
